{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "module": "es6",
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "strict": true,
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src",
    "outDir": "./dist"
  },
  "include": [
    "src"
  ]
}
